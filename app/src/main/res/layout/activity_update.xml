<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:id="@+id/progressBar"
        >

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/updateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/namaBukuUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Nama Buku"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>


    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/urlCoverBukuUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Url Kover Buku"
        android:textColorHint="@color/black"
        android:inputType="text"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/penulisBukuUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="penulis buku"
        android:inputType="text" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/tahunTerbitUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="tahun terbit"
        android:inputType="number" />


    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/katergoriUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
    </Spinner>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/simpanButtonUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Simpan" />

</LinearLayout>
